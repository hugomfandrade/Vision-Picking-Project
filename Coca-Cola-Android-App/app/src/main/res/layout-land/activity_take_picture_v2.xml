<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/rect">

    <org.gtp.cocacolaproject.ui.view.CameraView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </org.gtp.cocacolaproject.ui.view.CameraView>

    <org.gtp.cocacolaproject.ui.view.SelectedRectView
        android:id="@+id/camera_selected_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </org.gtp.cocacolaproject.ui.view.SelectedRectView>

    <org.gtp.cocacolaproject.ui.viewgroup.RoundedCornerLayout
        android:id="@+id/container_recognition"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:border_elevation="2dp"
        app:border_color="#fff"
        app:corner_radius="10dp">

        <TextView
            android:id="@+id/tv_recognition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#000"
            android:gravity="center"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold" />

    </org.gtp.cocacolaproject.ui.viewgroup.RoundedCornerLayout>

    <Button
        android:id="@+id/bt_take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:text="start"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="#fff"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold" >


        <requestFocus/>

    </Button>

    <ImageView
        android:id="@+id/iv_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        />

</RelativeLayout>